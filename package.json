{
  "name": "agentfix",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Repo-agnostic agent orchestration for auto-fix and bug-hunt workflows",
  "bin": {
    "agentfix": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun --watch src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir dist --target bun",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "check": "bun run typecheck && bun run test",
    "env:check": "bun scripts/deploy/check-runtime-env.ts",
    "docker:build": "docker build -t agentfix:local .",
    "docker:run": "docker run --rm -p 8787:8787 --env-file .env agentfix:local",
    "sentry:fetch": "bun scripts/sentry-fetch-issues.ts --projects \"$SENTRY_PROJECTS\" --max \"${MAX_ISSUES:-5}\"",
    "sentry:sync-issues": "bun scripts/sentry-sync-github-issues.ts",
    "sentry:build-contexts": "bun scripts/sentry-build-contexts.ts",
    "sentry:dispatch-contexts": "bun scripts/sentry-dispatch-contexts.ts",
    "demo:create": "bash scripts/demo/create-demo-repo.sh --name agentfix-demo-target --visibility private",
    "demo:request-changes": "bash scripts/demo/enable-auto-request-changes.sh --repo \"$AGENTFIX_DEMO_REPO\" --pr \"${AGENTFIX_DEMO_PR:-1}\""
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/node": "^22.13.8"
  }
}
